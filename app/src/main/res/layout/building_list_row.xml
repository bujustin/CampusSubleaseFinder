<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingTop="4dp"
    android:paddingEnd="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/building_row_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/building_row_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_home_black_48dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/building_row_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Example St."
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/building_row_num_subleases_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="# Subleases" />

                <TextView
                    android:id="@+id/building_row_num_connections_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="# Connections" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <TextView
                        android:id="@+id/building_row_rating_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/building_row_map_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:tint="@android:color/holo_blue_light"
                app:srcCompat="@drawable/ic_map_black_36dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>