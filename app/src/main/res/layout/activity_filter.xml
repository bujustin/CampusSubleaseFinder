<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--Address-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="Address:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/filter_address_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:hint="Eg. 1234 Example St"
                android:inputType="text"
                android:textSize="12sp" />

        </LinearLayout>

        <!--Price/Month-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="Price/Month:"
                android:textSize="16sp"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/filter_price_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="&lt;$400"
                android:textColor="@color/text_color" />

            <CheckBox
                android:id="@+id/filter_price_400_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="$400-$800"
                android:textColor="@color/text_color" />

            <CheckBox
                android:id="@+id/filter_price_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;$800"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <!--# Bedrooms-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Date: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/filter_start_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select a start date"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="to" />

            <EditText
                android:id="@+id/filter_end_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select an end date"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="# Bedrooms:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/filter_bedrooms_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/filter_bed_radio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="1"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bed_radio_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="2"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bed_radio_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="3"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bed_radio_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="4"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bed_radio_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/text_color" />
            </RadioGroup>

        </LinearLayout>

        <!--# Bathrooms-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="# Bathrooms:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/filter_bathrooms_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.25dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/filter_bath_radio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="1"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bath_radio_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="2"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bath_radio_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="3"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bath_radio_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="4"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/filter_bath_radio_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/text_color" />
            </RadioGroup>

        </LinearLayout>

        <!--Start Date-->

        <!--End Date-->

        <!--Parking-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="Parking:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/filter_parking_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:checked="false"
                android:showText="false" />

        </LinearLayout>


        <!--Parking Price-->

        <!--Pets-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="Pet Friendly:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/filter_pet_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp" />

        </LinearLayout>


        <!--Rating-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:text="Connection:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/filter_connection_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="Rating:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/filter_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:isIndicator="false"
                android:max="5"
                android:progress="0" />

        </LinearLayout>

        <Button
            android:id="@+id/filter_button"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:backgroundTintMode="add"
            android:text="Filter"
            android:textColor="#FFFFFFFF"
            android:textSize="25sp" />

    </LinearLayout>
</ScrollView>



